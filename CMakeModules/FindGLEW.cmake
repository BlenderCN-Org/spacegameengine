#
# Try to find GLEW library and include path.
# Once done this will define
#
# GLEW_FOUND
# GLEW_INCLUDE_PATH
# GLEW_LIBRARY
#

FIND_PATH(
	GLEW_INCLUDE_PATH
	NAMES GL/glew.h
	PATHS ${GLEW_ROOT}/include
)

IF(WIN32)
	FIND_LIBRARY(
		GLEW_LIBRARY
		NAMES GLEW glew glew32 glew32s
		PATHS ${GLEW_ROOT}/lib
	)
ELSE()
	FIND_LIBRARY(
		GLEW_LIBRARY
		NAMES GLEW glew
		PATHS ${GLEW_ROOT}/lib
	)
ENDIF()

INCLUDE(FindPackageHandleStandardArgs)

FIND_PACKAGE_HANDLE_STANDARD_ARGS(
	GLEW
	DEFAULT_MSG
	GLEW_INCLUDE_PATH
	GLEW_LIBRARY
)
